<div>
    Seller Index
    <a href="/seller/new" style="text-decoration:none">New Seller</a>

    <form action="/seller" method="get">
        <label for="name">Name: </label>
        <input type="text" placeholder="Name" name="sellerName" value="<%= searchOptions.sellerName %>">
        <button type="submit">Submit</button>
    </form>
    <br>
    <div>
        <% sellers.forEach(seller => { %>
        <div>
            <div><%= seller.sellerName %></div>
            <div>
                <a href="/seller/<%=seller.id%>">View</a>
                <a href="/seller/<%=seller.id%>/edit">Edit</a>
                <%-include("../partials/deleteForm.ejs", 
                        { url: `/seller/${seller.id}` }
                    )%>
            </div>
        </div>
        <% }) %>
    </div>
</div>