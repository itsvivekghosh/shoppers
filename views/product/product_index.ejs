<div>
    <a href="/product/new">Register New Product</a>
    <div>
        <form action="/product" method="get">
            <label for="name">Name: </label>
            <input type="text" placeholder="Search Product" name="nameOfProduct"
                value="<%= searchOptions.nameOfProduct %>">
            <button type="submit">Submit</button>
        </form>
        <br>
        <div>
            <% products.forEach(product => { %>
            <div>
                <div><%= product.nameOfProduct %></div>
                <div>
                    <a href="/product/<%= product.id %>">
                        <img class="book-cover" src="<%= product.coverImagePath %>">
                    </a>
                </div>
                <div>
                    <a href="/product/<%=product.id %>">View</a>
                    <a href="/product/<%=product.id%>/edit">Edit</a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>